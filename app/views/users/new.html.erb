<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
       <%= render 'shared/error_messages', object: f.object %>    

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Password" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Repita Password" %>
      <%= f.password_field :password_confirmation %>
	  
	  <%= f.label :rol, "Rol: Guerrero o Bandido" %>
      <%= f.text_field :rol %>
	  
	  <%= f.label :biografia, "Biografia" %>
      <%= f.text_field :biografia %>

      <%= f.submit "Crear mi cuenta", class: "btn btn-large" %>
    <% end %>
  </div>
</div>
