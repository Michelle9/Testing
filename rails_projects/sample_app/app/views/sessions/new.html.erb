<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span4 offset2">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Password" %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large" %>  <!-- btn-large btn-primary -->
    <% end %>

    <p>¿Nuevo Usuario? <%= link_to "Regístrate!", signup_path %></p>
  </div>
</div>
